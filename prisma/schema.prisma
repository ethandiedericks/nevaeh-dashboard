generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(uuid()) // Clerk user ID will be assigned manually
  clerkUserId String     @unique
  email       String     @unique
  imageUrl    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  contracts   Contract[]
}

model Contract {
  id             String    @id @default(uuid())
  clientName     String
  clientEmail    String
  contractPdfUrl String
  amount         Float
  startDate      DateTime
  endDate        DateTime
  signedDate     DateTime
  createdAt      DateTime  @default(now())
  userId         String
  user           User      @relation(fields: [userId], references: [clerkUserId], onDelete: Cascade)
  payments       Payment[]
  invoices       Invoice[]

  @@index([userId])
}

model Payment {
  id         String   @id @default(uuid())
  amountPaid Float
  paidOn     DateTime
  notes      String?
  createdAt  DateTime @default(now())
  contract   Contract @relation(fields: [contractId], references: [id])
  contractId String

  @@index([contractId])
}

model Invoice {
  id            String   @id @default(uuid())
  invoicePdfUrl String
  amount        Float
  issuedOn      DateTime
  notes         String?
  createdAt     DateTime @default(now())
  contract      Contract @relation(fields: [contractId], references: [id])
  contractId    String

  @@index([contractId])
}
